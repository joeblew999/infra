{
  "binaries": [
    {
      "name": "pocketbase",
      "version": "0.21.0",
      "source": "go-build",
      "path": "./cmd/pocketbase"
    }
  ],
  "process": {
    "command": "${dep.pocketbase}",
    "args": [],
    "env": {
      "POCKETBASE_DIR": "${data}/pocketbase"
    },
    "compose": {
      "is_daemon": false,
      "availability": {
        "restart": "always"
      },
      "readiness_probe": {
        "exec": {
          "command": "curl -f http://127.0.0.1:8090/api/health"
        },
        "initial_delay_seconds": 5,
        "period_seconds": 5,
        "timeout_seconds": 3,
        "success_threshold": 1,
        "failure_threshold": 5
      }
    }
  },
  "ports": {
    "primary": {
      "port": 8090,
      "protocol": "http"
    }
  },
  "scalable": false,
  "scale_strategy": "infra"
}
